<VBox prefHeight="550.0" prefWidth="625.0" spacing="24.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controle.ControleListaAlimentos">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Pane HBox.hgrow="ALWAYS">
               <children>
                  <Label prefHeight="30.0" prefWidth="514.0" text="Gerênciamento de alimentos">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <JFXButton buttonType="RAISED" onAction="#abrirFormulario" prefHeight="28.0" prefWidth="113.0" text="Cadastrar" textFill="WHITE">
               <styleClass>
                  <String fx:value="btn-success" />
                  <String fx:value="btn" />
               </styleClass>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="PLUS_CIRCLE" size="18" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <FontAwesomeIconView fill="#505050" glyphName="SEARCH" size="24" wrappingWidth="30.285715103149414" />
            <JFXTextField focusColor="#00c552" labelFloat="true" prefHeight="26.0" prefWidth="588.0" promptText="Pesquisar..." HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <TableView fx:id="tabela" prefHeight="440.0" prefWidth="625.0" stylesheets="@table.css">
         <placeholder>
            <Label text="Nenhum registro encontrado!" />
         </placeholder>
         <columns>
            <TableColumn prefWidth="75.0" text="Código" />
            <TableColumn prefWidth="75.0" text="Descriçao" />
            <TableColumn prefWidth="75.0" text="Ativo" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="625.0" spacing="16.0">
         <children>
            <JFXButton buttonType="RAISED" prefHeight="28.0" prefWidth="105.0" text="Relatório" textFill="WHITE">
               <styleClass>
                  <String fx:value="btn-info" />
                  <String fx:value="btn" />
               </styleClass>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="TABLE" size="18" />
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="356.0" layoutY="24.0" prefHeight="28.0" prefWidth="105.0" text="Remover" textFill="WHITE">
               <styleClass>
                  <String fx:value="btn-danger" />
                  <String fx:value="btn" />
               </styleClass>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="DELETE" size="18" />
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" layoutX="274.0" layoutY="24.0" prefHeight="28.0" prefWidth="105.0" text="Editar" textFill="WHITE">
               <styleClass>
                  <String fx:value="btn-success" />
                  <String fx:value="btn" />
               </styleClass>
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="PENCIL" size="18" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
   </children>
